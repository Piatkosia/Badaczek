@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Badaczek.Identity.Web.Resources
@model RegisterModel
@{
    ViewData["Title"] = SharedResources.Register_Title;
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>@SharedResources.Register_CreateAccount</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Jan" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Kowalski" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ResearchUnit" class="form-control" placeholder="UJ" />
                <label asp-for="Input.ResearchUnit"></label>
                <span asp-validation-for="Input.ResearchUnit" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.PreferredLanguage" class="form-select" aria-required="true">
                    <option value="pl">Polski</option>
                    <option value="en">English</option>
                </select>
                <label asp-for="Input.PreferredLanguage"></label>
                <span asp-validation-for="Input.PreferredLanguage" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="xyz@abc.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@SharedResources.Register_button</button>
        </form>
    </div>
